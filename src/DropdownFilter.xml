<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.dropdownfilter.DropdownFilter" offlineCapable="true" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Dropdown filter</name>
    <description>Filter Mendix List views using a dropdown</description>
    <icon/>
    <properties>
        <property key="entity" type="entity">
            <caption>List view entity</caption>
            <category>Data source</category>
            <description>Entity whose attributes will be filtered. This entity should match the list view entity</description>
        </property>
        <property key="filters" type="object" isList="true" required="false">
            <caption>Filters</caption>
            <category>Data source</category>
            <description/>
            <properties>
                <property key="caption" type="string" required="false">
                    <caption>Caption</caption>
                    <category>General</category>
                    <description/>
                </property>
                <property key="filterBy" type="enumeration" defaultValue="attribute">
                    <caption>Comparison</caption>
                    <category>General</category>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="attribute">Attribute</enumerationValue>
                        <enumerationValue key="XPath">XPath</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="attribute" type="attribute" required="false" entityProperty="../entity">
                    <caption>Attribute</caption>
                    <category>General</category>
                    <description>The attribute on which the filter method is applied to</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Decimal"/>
                        <attributeType name="Boolean"/>
                    </attributeTypes>
                </property>
                <property key="value" type="string" required="false">
                    <caption>Value</caption>
                    <category>General</category>
                    <description/>
                </property>
                <property key="constraint" type="entityConstraint" required="false" entityProperty="../entity">
                    <caption>Constraint</caption>
                    <category>General</category>
                    <description>Constraint on the data from the data entity (used when comparison is XPath)</description>
                </property>
                <property key="filterMethod" type="enumeration" defaultValue="contains">
                    <caption>Filter method</caption>
                    <category>General</category>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="contains">Contains</enumerationValue>
                        <enumerationValue key="equals">Equals</enumerationValue>
                    </enumerationValues>
                </property>
            </properties>
        </property>
    </properties>
</widget>
